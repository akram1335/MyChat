<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/message_single_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:id="@+id/left_arrow"
        >

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/message_profile_layout"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_weight="0"
        android:layout_marginTop="10dp"
        android:src="@drawable/usersetting"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/message_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="30dp"

        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="17dp"
        android:paddingRight="17dp"

        android:layout_toEndOf="@+id/message_profile_layout"
        android:background="@drawable/msg_background_2"

        android:text="Message Text"
        android:textColor="@android:color/white"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/name_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/message_profile_layout"
        android:text="Display Name"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/time_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/message_profile_layout"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="-13dp"
        android:text="00:00"
        android:textColor="@color/colorPrimary"
        android:textSize="8sp" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/message_image_layout"
        android:layout_width="194dp"
        android:layout_height="194dp"
        android:layout_below="@+id/message_text_layout"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-39dp"
        android:layout_marginEnd="21dp"
        android:layout_toEndOf="@+id/message_profile_layout"
        android:padding="10dp"
        android:scaleType="centerCrop" />
    </RelativeLayout>
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:id="@+id/right_arrow">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/message_profile_layout1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="0"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/usersetting"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/message_text_layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"

            android:layout_marginEnd="12dp"
            android:layout_marginRight="30dp"

            android:layout_marginBottom="20dp"
            android:layout_toStartOf="@+id/message_profile_layout1"
            android:background="@drawable/msg_background"

            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:text="Message Text"
            android:textColor="@android:color/white"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/name_text_layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-330dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/message_profile_layout1"
            android:text="Display Name"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/time_text_layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/message_profile_layout1"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="-13dp"
            android:text="00:00"
            android:textColor="@color/colorPrimary"
            android:textSize="8sp" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/message_image_layout1"
            android:layout_width="194dp"
            android:layout_height="194dp"
            android:layout_below="@+id/message_text_layout1"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="-39dp"
            android:layout_marginEnd="45dp"
            android:paddingVertical="30dp"/>
    </RelativeLayout>


</RelativeLayout>