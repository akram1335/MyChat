<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/bg_login"
    tools:context=".resetpass">

    <EditText
        android:id="@+id/enter_reset_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="146dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/et_bg"
        android:hint="tape your mail"
        android:textColor="@color/login_form_details"
        android:inputType="textEmailAddress"
        android:padding="16dp"
        android:textColorHint="@color/login_form_details"
        >


    </EditText>



    <Button
        android:id="@+id/reset_mail_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_bg"
        android:text="RESET"
        android:textAllCaps="false"
        android:textColor="@color/login_form_details_medium"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/enter_reset_mail" />

    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reset_mail_button"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        android:text="by clicking RESET, you will recieve an email to reset your password ."
        android:textAlignment="center"
        android:textColor="@color/login_form_details"
        android:textSize="16sp" />

</RelativeLayout>